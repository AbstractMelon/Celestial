[
  {
    "label": "Dev: Backend + Frontend",
    "command": "bash",
    "args": [
      "-c",
      "./scripts/run_backend.sh --debug & BACKEND_PID=$!; ./scripts/run_frontend.sh editor; wait $BACKEND_PID"
    ],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": false,
    "allow_concurrent_runs": true,
    "reveal": "always"
  },
  {
    "label": "Build: Backend + Export and launch frontend",
    "command": "bash",
    "args": [
      "-c",
      "./scripts/build_backend.sh && ./scripts/run_frontend.sh run"
    ],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Run: Frontend only (Play mode)",
    "command": "bash",
    "args": ["-c", "./scripts/run_frontend.sh run"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": false,
    "allow_concurrent_runs": true,
    "reveal": "always"
  },
  {
    "label": "Run: Frontend only (Editor mode)",
    "command": "bash",
    "args": ["-c", "./scripts/run_frontend.sh editor"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": false,
    "allow_concurrent_runs": true,
    "reveal": "always"
  },
  {
    "label": "Logs: Frontend",
    "command": "bash",
    "args": ["-c", "./scripts/run_frontend.sh logs"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Check: Frontend Tools Setup",
    "command": "bash",
    "args": ["-c", "./scripts/run_frontend.sh check"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Clean: Frontend logs and temp",
    "command": "bash",
    "args": ["-c", "./scripts/run_frontend.sh clean"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always"
  }
]
